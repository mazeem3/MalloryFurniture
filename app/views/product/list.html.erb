<h1 class= "page_title">
  <%= link_to root_path, class: "title_text" do%>
  Mallory Furniture
  <% end%>
</h1>

<% @products.in_groups_of(3, false) do |products| %>
  <div class="row">
    <% products.each do |product| %>
      <div class="col-xs-4">
        <div class="thumbnail">
          <%= link_to product_path(id: product.pid) do %>
            <%= image_tag product.img_file, class: "small" %>
          <% end %>
          <div class="caption">
            <h3><%= product.item %></h3>
            <p><%= number_to_currency product.price %></p>
            <%= link_to 'More Info', products_path(pid: product.pid), class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
